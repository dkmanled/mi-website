                                <div className="text-white">TRANS</div>
                                <div className="text-[#00ff1d]">FOR</div>
                                <div className="text-white">MAR</div>
                            </div>
                            <p className="mt-12 text-zinc-500 font-header text-[10px] tracking-[0.8em] uppercase">Ingeniería Visual de Alto Rango</p>
                            <a href="#productos" className="mt-12 inline-block px-8 py-4 border border-[#00ff1d] text-[#00ff1d] text-xs font-bold tracking-[0.3em] uppercase hover:bg-[#00ff1d] hover:text-black transition-colors">Explorar</a>
                        </div>
                    </header>

                    {/* PRODUCTOS */}
                    <section id="productos" className="py-32 px-6 relative z-10 bg-black border-t border-zinc-900">
                        <div className="max-w-7xl mx-auto">
                            <Heading pre="INGENIERÍA VISUAL" title="NUESTROS" hg="SISTEMAS" />
                            <div className="grid md:grid-cols-2 gap-[1px] bg-zinc-900 border border-zinc-900">
                                {SERVICES.map(s => (
                                    <div key={s.id} onClick={() => setSelected(s)} className="relative h-[500px] group bg-black cursor-pointer overflow-hidden">
                                        <img src={s.img} className="absolute inset-0 w-full h-full object-cover opacity-50 grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700" />
                                        <div className="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-90"></div>
