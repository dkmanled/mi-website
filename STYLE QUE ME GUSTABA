        // --- COMPONENTES ---

        // Fondo Canvas (Nativo JS para estabilidad)
        const LaserBg = () => {
            const canvasRef = useRef(null);
            useEffect(() => {
                const c = canvasRef.current;
                const x = c.getContext('2d');
                let w, h;
                let lines = [];
                
                const resize = () => { w = c.width = window.innerWidth; h = c.height = window.innerHeight; };
                const init = () => {
                    lines = [];
                    for(let i=0; i<30; i++) lines.push({
                        x: Math.random()*w, y: Math.random()*h,
                        len: 100 + Math.random()*300,
                        hor: Math.random() > 0.5,
                        sp: (Math.random()-0.5)*0.2,
                        op: Math.random()*0.15
                    });
                };
                const draw = () => {
                    x.clearRect(0,0,w,h);
                    lines.forEach(l => {
                        x.strokeStyle = `rgba(0, 255, 29, ${l.op})`;
                        x.beginPath(); x.moveTo(l.x, l.y);
                        x.lineTo(l.hor ? l.x + l.len : l.x, l.hor ? l.y : l.y + l.len);
                        x.stroke();
                        if(l.hor) l.x += l.sp; else l.y += l.sp;
                        if(l.x > w) l.x = -l.len; if(l.x < -l.len) l.x = w;
                        if(l.y > h) l.y = -l.len; if(l.y < -l.len) l.y = h;
                    });
                    requestAnimationFrame(draw);
                };
                window.addEventListener('resize', resize);
                resize(); init(); draw();
                return () => window.removeEventListener('resize', resize);
            }, []);
            return <canvas ref={canvasRef} className="fixed inset-0 pointer-events-none z-0 opacity-40" />;
        };

        const Heading = ({ pre, title, hg }) => (
            <div className="mb-20 animate-enter">
                <span className="text-[#00ff1d] font-header text-[10px] tracking-[0.6em] block mb-4">{pre}</span>
                <h2 className="text-4xl md:text-6xl font-header font-light uppercase leading-none text-white">
                    {title} <br/><span className="text-[#00ff1d] font-black">{hg}</span>
                </h2>
                <div className="h-[1px] w-20 bg-[#00ff1d] mt-8"></div>
            </div>
        );

        // --- APP ---
        const App = () => {
